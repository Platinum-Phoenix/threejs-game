mixin link(displayName, link)
    if link
        a(href=link, target="_blank" rel="noopener noreferrer")= displayName
    else if block
        a(href=displayName, target="_blank" rel="noopener noreferrer")
            block
    else
        a(href=displayName, target="_blank" rel="noopener noreferrer")= displayName

html(lang="en")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title #{title}
        link(rel="stylesheet" href="/css/webpage.css")
        link(
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" 
            integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" 
            crossorigin="anonymous"
        )
        block styles
        meta(name="theme-color" content="#7952b3")

    body.d-flex.flex-column.h-100
        header
            nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
                .container-fluid
                    a.navbar-brand(href="#") ThreeJS Examples
                    button.navbar-toggler(
                        type="button" 
                        data-bs-toggle="collapse" data-bs-target="#navbarsExampleDefault"
                        aria-controls="navbarsExampleDefault" aria-expanded="false" 
                        aria-label="Toggle navigation"
                    )
                        span.navbar-toggler-icon
            .collapse.navbar-collapse#navbarsExampleDefault
                ul.navbar-nav.navbar-nav.me-auto.mb-2.mb-md-0
                    li.nav-item.active
                        a.nav-link(aria-current="page" href="#") Home
                    li.nav-item
                        a.nav-link(href="#") Link
                    li.nav-item
                        a.nav-link.disabled(href="#" tabindex="-1" aria-disabled="true") Disabled
                    li.nav-item.dropdown
                        a.nav-link.dropdown-toggle(
                            href="#"
                            id="dropdown01" data-bs-toggle="dropdown"
                            aria-expanded="false"
                            ) Examples
                        ul.dropdown-menu(aria-labelledby="dropdown01")
                        li
                            each example in examples
                                - var link = '/example/' + example 
                                a.dropdown-item(href=link) #{example}

                form.d-flex
                    input.form-control.me-2(type="search" placeholder="Search" aria-label="Search")
                    button.btn.btn-outline-success(type="submit") Search

        block content

        footer.footer.mt-auto.py-3.bg-light
            .container
                span.text-muted
                    +link('https://github.com/Platinum-Phoenix/threejs-game')
                        img(
                            src="icons/github.svg", 
                            alt="Github" 
                            title="Github" 
                            height="32" width="32"
                        )
